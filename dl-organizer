#!/bin/bash

# moves into your Downloads folder
cd /your/path/to/Downloads
# moves pdfs, odt, doc, docx, txt etc to Documents or any folder you choose
mv *'.pdf' /your/path/to/Documents
mv *'.odt' /your/path/to/Documents
mv *'.doc' /your/path/to/Documents
mv *'.docx' /your/path/to/Documents
mv *'.txt' /your/path/to/Documents
# moves avi, flv, mp4 m4v, mov, mpg, swf wmv etc to Videos or any folder you choose
mv *'.avi' /your/path/to/Videos
mv *'.flv' /your/path/to/Videos
mv *'.mp4' /your/path/to/Videos
mv *'.mov' /your/path/to/Videos
mv *'.m4v' /your/path/to/Videos
# moves jpg, png, gif, ico etc to Pictures or any folder you choose
mv *'.jpg' /your/path/to/Pictures
mv *'.png' /your/path/to/Pictures
mv *'.gif' /your/path/to/Pictures
# moves mp3, wma, wav, ogg etc to Music or any folder you choose
mv *'.mp3' /your/path/to/Music
mv *'.wma' /your/path/to/Music
mv *'.wav' /your/path/to/Music
mv *'.ogg' /your/path/to/Music
